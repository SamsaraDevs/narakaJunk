        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeCoop",-6,1,0,0,0,1)
        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeCoop",6,1,0,0,0,1)
		goto AltFireFinish
	  FireOneCoop:
        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeCoop",0,1,0,0,0,7)
		goto AltFireFinish
		
	 TLMSAltFire:
	    TNT1 A 0 A_JumpIfInventory("AbandonAmmo",3,"FireThreeTLMS")
		TNT1 A 0 A_JumpIfInventory("AbandonAmmo",2,"FireTwoTLMS")
		TNT1 A 0 A_JumpIfInventory("AbandonAmmo",1,"FireOneTLMS")
		
	  FireThreeTLMS:
        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeTLMS",-6,1,0,0,0,1)
        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeTLMS",6,1,0,0,0,1)
        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeTLMS",0,1,0,0,0,7)
		goto AltFireFinish
	  FireTwoTLMS:
        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeTLMS",-6,1,0,0,0,1)
        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeTLMS",6,1,0,0,0,1)
		goto AltFireFinish
	  FireOneTLMS:
        TNT1 A 0 A_FireCustomMissile("AbandonGrenadeTLMS",0,1,0,0,0,7)
		goto AltFireFinish
		
		
	  AltFireFinish:
        TNT1 A 0 A_PlaySound("tfear/abandonshot2")
		TABD B 2
		TABD A 12 Offset(0,43)
		TABD A 3 Offset(0,41)
		TABD A 2 Offset(0,38)
		TABD A 1 Offset(0,33)
        TABD A 5
		goto Ready
		
      Reload:
        TNT1 A 0 A_JumpIfInventory("VillainAmmoHeavy",1,1)
        Goto Ready
        TABD D 11 A_PlayWeaponSound("tfear/abandonload")
        TABD E 10

      Reload2:
        TNT1 A 0 A_TakeInventory("VillainAmmoHeavy",1)
        TNT1 A 0 A_GiveInventory("AbandonAmmo",1)
        TNT1 A 0 A_JumpIfInventory("AbandonAmmo",7,3)
        TNT1 A 0 A_JumpIfInventory("VillainAmmoHeavy",1,1)
        Goto ReloadFinish
        TNT1 A 0
        Goto Reload2
	  ReloadFinish:
        TNT1 A 0
        TABD F 10
		TABD G 10
		TABD A 1
        Goto Ready
    }
}

