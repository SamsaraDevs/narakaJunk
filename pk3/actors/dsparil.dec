	  CoopAltFire:
        TNT1 A 0 A_FireCustomMissile("DSparilFireballCoop2",-3,0,0,-3)
        TNT1 A 0 A_FireCustomMissile("DSparilFireballCoop2",0,0,0,-3)
        TNT1 A 0  A_FireCustomMissile("DSparilFireballCoop2",3,0,0,-3)
