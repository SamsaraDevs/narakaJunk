        SPRN C 3
        TNT1 A 0 A_GunFlash
        TNT1 A 0 A_PlayWeaponSound("dsparilserpent/attack2")
		TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopAltFire")
