	  AltFire:
		TNT1 A 0 A_JumpIfNoAmmo("LightShot")
        TSTF HHHIIJJKK 1
	  AltHold:
        TSTF L 4 A_JumpIfNoAmmo("GoToReload")
		TNT1 A 0 A_JumpIfInventory("TfearRefire",1,"AltHold2")
		TSTF L 1 Offset(0,32) 
