ACTOR TfearPfhorTrooper : FriendlyPfhorTrooper
{
	Health 200
	Species "Villain"
    Radius 16
    Height 56
	+MISSILEMORE
    States
    {
      Spawn:
        TNT1 A 0 A_GiveInventory("IsNarakaClass",1)
        PTRO E 15 A_Look
        goto see

      See:
        TNT1 A 0 A_GiveInventory("IsNarakaClass",1)
        PTRO AABBCCDD 3 A_Chase
        LOOP

      Missile:
        PTRO E 2 A_FaceTarget
        TNT1 A 0 A_PlaySound("pfhortrooper/fire")
