		TNT1 A 0 A_PlaySoundEx("tfear/summon","soundslot7",0,0)
		TNT1 A 0 A_GiveInventory("TfearBeaconCooldown",21)
        TNT1 A 1 ACS_ExecuteAlways(484, 0, 7, 35)
        fail
		
	  UseFail:
        TNT1 A 0 A_Print("Your signal falls flat.")
		TNT1 A 1
		fail
    }
