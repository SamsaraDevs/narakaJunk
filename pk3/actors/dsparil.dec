    Weapon.SlotNumber 9
    +AMMO_OPTIONAL
    +ALT_AMMO_OPTIONAL
    Weapon.Kickback 100
    States
    {
      Ready:
        TNT1 A 0 A_JumpIfInventory("DSparilWalking",1,"Walking")
        SPRN A 1 A_WeaponReady
        Loop

      Walking:
        SPRN EEEFFGGGAA 2 A_WeaponReady
        goto Ready

      Deselect:
        SPRN A 1 A_Lower
